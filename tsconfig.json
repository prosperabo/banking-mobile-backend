{
  "compilerOptions": {
    "baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
		},
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "experimentalDecorators": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
